<%= form_for @expense do |e| %>
  <% if @expense.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@expense.errors.count, "error") %>: U heeft een
        fout gemaakt bij het invullen van de gegevens
      </h2>
      <ul>
        <% @expense.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <p>
      <%= e.label :group, 'Vul hier de categorie in waar het onder valt' %>
      <%= e.select(:group, options_for_select([['Een','een'],
                                               ['Twee','twee'], 
                                               ['Drie','drie']]), {}, { class: "form-control" }) %>
    </p>
  </div>

  <div class="form-group">
    <p>
      <%= e.label :cost, 'Vul hier het onderwerp in wat het betreft' %>
      <%= e.text_field :cost, class: "form-control" %>
    </p>
  </div>

  <div class="form-group">
    <p>
      <%= e.label :amount, 'Vul hier het bedrag in gehele euro\'s 
                            in waar om het gaat â‚¬' %>
      <%= e.number_field :amount %>
    </p>
  </div>

  <div class="form-group">
    <p>
      <%= e.label :date, 'Op welke datum is dit bedrag binnen gekomen?' %>
      <div class='input-group date' id='datetimepicker1'>
        <%= e.date_field :date, class: "form-control", placeholder: 'blaat blaat ->' %>
          <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
          </span>
      </div>
    </p>
  </div>


  <div class="form-group">
    <p>
      <%= e.submit 'Verstuur!', class: "btn btn-primary" %>
    </p>
  </div>

  <script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker({
          format: "DD-MM-YYYY"
        });
      });
  </script>

<% end %>